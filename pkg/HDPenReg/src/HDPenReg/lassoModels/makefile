#------------ LASSOMODELS MAKEFILE


include ../../makevars

#-----------------------------------------------------------------------
# Paths
#
BIN_DIR = ../../bin/

#-----------------------------------------------------------------------
# header files
#
CXX_INCS  = $(wildcard *.h)

#-----------------------------------------------------------------------
# source files
#
CPP_SRCS = $(wildcard *.cpp)

#-----------------------------------------------------------------------
# binary files
#
CPP_OBJS = $(CPP_SRCS:%.cpp=$(BIN_DIR)%.o)

#-----------------------------------------------------------------------
# Compilation rules
#
$(BIN_DIR)%.o: %.h makefile
$(BIN_DIR)%.o: %.cpp
	$(CXX) $(CFLAGS) $(CXXFLAGS) $(STK_INC_DIR)  $< -c -o $@

#-----------------------------------------------------------------------
# creating objects files
#
obj: $(CPP_OBJS)

#-----------------------------------------------------------------------
# Targets
#
all: obj
